<div class="row col-md-12 nested-fields">
	<h2 class="col-md-12">Company:</h2>
	<div class="form-group col-md-6">
			<%= job.text_field :name, placeholder: 'Name', class: 'form-control' %>
	</div>

	<div class="form-group col-md-6">
			<%= job.text_field :website, placeholder: 'Website', class: 'form-control' %>
	</div>

	<div class="form-group col-md-6">
		<%= job.text_field :logo_url, placeholder: 'Logo url', class: 'form-control' %>
	</div>

	<div class="form-group col-md-6">
		<%= job.text_field :industry, placeholder: 'Industry', class: 'form-control' %>
	</div>

	<div class="form-group col-md-6">
		<%= job.text_field :hq_location, placeholder: 'HQ location', class: 'form-control' %>
	</div>

	<div class="form-group col-md-6">
		<%= job.number_field :num_of_employees, placeholder: 'Number of Employees', class: 'form-control' %>
	</div>

	<div class="form-group col-md-6">
		<%= job.number_field :valuation, placeholder: 'Valuation', class: 'form-control' %>
	</div>

	<div class="form-group col-md-12">
		<%= generate_radio_boxes "#{job.object_name}", :maturity, Company.maturities %>
		<div class="form-group col-md-8">
			<%= job.text_area :notes, placeholder: 'Notes', class: 'form-control' %>
		</div>
	</div>
	<%= link_to_remove_association 'Remove Company', job,class: 'btn btn-danger'  %>
</div>